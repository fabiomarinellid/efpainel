 <div class="login-page">
      <div class="container d-flex align-items-center">
        <div class="form-holder has-shadow">
          <div class="row">
            <!-- Logo & Information Panel-->
            <div class="col-lg-6">
              <div class="info d-flex align-items-center">
                <div class="content">
                  <div class="logo">
                    <h1>EF Admin</h1>
                  </div>
                  <p>Painel de administração do Site.</p>
                </div>
              </div>
            </div>
            <!-- Form Panel    -->
            <div class="col-lg-6">
              <div class="form d-flex align-items-center">
                <div class="content">
                 <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-validate mb-4"}) do |f| %>
                 <%= render "devise/shared/error_messages", resource: resource %>
                    <div class="form-group">
                      <%= f.email_field :email, autofocus: true, class: "input-material", required: "required" %>
                      <%= f.label :email, class: "label-material" %>
                    </div>
                    <div class="form-group">
                     <%= f.password_field :password, class: "input-material",  required: "required", type: "password" %>
                     <%= f.label :password, class: "label-material" %>
                    </div>
                  

                  <% if devise_mapping.rememberable? %>
                    <div class="form-group"> 
                      <div class="field">
                       <%= f.check_box :remember_me %>
                       <%= f.label :remember_me %>
                      </div>
                    </div>
                  <% end %>

                  <%= f.submit "Acessar", class: "btn btn-primary" %>

                 <% end %>
                 <%= render "users/shared/links" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="copyrights text-center">
        <p>EF Admin by <a href="#" class="external">EF Digital</a></p>
      </div>
    </div>
