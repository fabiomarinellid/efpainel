<!DOCTYPE html>
<html>
  <head>
    <% Title.where(site_id: session[:current_site_id]).each do |titulo| %>
      
    <title><%= titulo.title %></title>
    
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1">
    <link rel="shortcut icon" href="<%= titulo.photologo %>" type="image/x-icon">
    <meta name="description" content="<%= titulo.subtitle %>">

    <!-- Meta tags do Face -->
    <meta property="og:url" content="<%= request.url %>" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="<%= titulo.title %>" />
    <meta property="og:description" content="<%= titulo.subtitle %>" />
    <meta property="og:image" content="<%= titulo.photologo %>" />
    <% end %>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'lanchonetedotrom/application' %>
    
  </head>

  <body>
    <%= yield %>
    <%= javascript_include_tag 'lanchonetedotrom/application' %>
  </body>
</html>
