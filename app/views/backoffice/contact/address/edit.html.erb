<div class="page-header">
  <div class="container-fluid">
    <h2 class="h5 no-margin-bottom">Alterar endereço</h2>
  </div>
</div>
<% if @address.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>

    <ul>
        <% @address.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>

    </div>
<% end %>
<div class="col-lg-12">
	<div class="block">
	  <div class="block-body">
	    <%= form_for([:backoffice, :contact, @address]) do |t| %>
	        <div class="form-group">
	            <%= t.label "Rua", class: "form-control-label" %>
	            <%= t.text_field :street, class:"form-control" %>
	        </div>
	        <div class="form-group">
	            <%= t.label "Número", class: "form-control-label" %>
	            <%= t.text_field :number, class:"form-control" %>
	        </div>
	        <div class="form-group">
	            <%= t.label "Bairro", class: "form-control-label" %>
	            <%= t.text_field :neighborhood, class:"form-control" %>
	        </div>
	        <div class="form-group">
	            <%= t.label "Cidade", class: "form-control-label" %>
	            <%= t.text_field :city, class:"form-control" %>
	        </div>
	        <div class="form-group">
	            <%= t.label "Estado", class: "form-control-label" %>
	            <%= t.text_field :state, class:"form-control" %>
	        </div>
	        <div class="form-group">
	            <%= t.label "CEP", class: "form-control-label" %>
	            <%= t.text_field :zipcode, class:"form-control" %>
	        </div>
	        <div class="form-group">
               <%= t.label "Site", class: "form-control-label" %>   
               <%= t.collection_select( :site_id, @sites, :id, :name, 
               {:include_blank=>false}, {:class=> 'form-control mb-3 mb-3'}) %>
            </div>
		    <div class="form-group">       
		        <%= t.submit "Salvar", class: "btn btn-primary" %>
		    </div>
	    <% end %>
	  </div>
	</div>
</div>