<div class="page-header">
  <div class="container-fluid">
    <h2 class="h5 no-margin-bottom">Rótulo para os produtos</h2>
    <h3><%= notice %></h3>
  </div>
</div>
<div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="block margin-bottom-sm">
          <div class="table-responsive"> 
            <table class="table">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Nome</th>
                  <th>Descrição</th>
                  <th>Site</th>
                  <th style="text-align: center;">Ações</th>
                </tr>
              </thead>
              <tbody>
              	<% @labels.each do |label| %>
	                <tr>
	                  <th scope="row"><%= label.id %></th>
                    <td>
                     <div class="badge color-label has-tooltip" data-html="true" style="background-color: <%= label.name.blank? ? '' : label.color_i18n %>; color: <%= (label.color != "warning" && label.color != "light") ? '#ffffff' : '#212529' %>"  , title="<%= label.description %>"><%= label.name %>
                      </div>
                    </td>
	                  <td><%= label.description %></td>
	                  <td><%= label.site.name %></td>
	                  <td style="width: 130px; text-align: center;">
	                  	<%= link_to edit_backoffice_product_label_path(label), class: "btn btn-primary" do %>
	                        <i class="icon-new-file"></i>
	                    <% end %>
	                    <%= link_to backoffice_product_label_path(label), :method => :delete, class: "btn btn-secondary", data: {confirm: "Confirma a exclusão do admin <b>#{label.name}</b>?"} do %>
	                    	<i class="icon-close"></i>
	                        <% end %>
	                  </td>
	                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="row">
      	<div style="width: 130px; text-align: center;">
      	 <%= link_to new_backoffice_product_label_path, class: "btn btn-primary" do %>
            <i class="fa fa-plus"></i>
         <% end %>
        </div>
      </div>
    </div>