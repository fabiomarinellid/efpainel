<div class="page-header">
  <div class="container-fluid">
    <h2 class="h5 no-margin-bottom">Cadastro dos produtos</h2>
    <h3><%= notice %></h3>
  </div>
</div>
<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="block margin-bottom-sm">
        <div class="input-group">
          <input type="text" class="form-control">
          <div class="input-group-append">
            <button type="button" class="btn btn-primary">Pesquisar</button>
          </div>
        </div>
      </div>
     </div>
   </div>
</div>
<div class="container-fluid">
   <div class="row">
    <div class="col-lg-12">
      <div class="block margin-bottom-sm">
       <%= link_to new_backoffice_product_product_path, class: "btn btn-primary" do %>
          <i class="fa fa-plus"></i>
       <% end %>
      </div>
     </div>
   </div>
  </div>
<div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="block margin-bottom-sm">
          <div class="table-responsive"> 
            <table class="table">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Foto do produto</th>
                  <th>Nome</th>
                  <th>Descrição</th>
                  <th>Preço</th>
                  <th>Mostrar</th>
                  <th>Destacar</th>
                  <th>Categoria</th>
                  <th>Rótulo</th>
                  <!--<th>Site</th>-->
                  <th style="text-align: center;">Ações</th>
                </tr>
              </thead>
              <tbody>
              	<% @produtos.each do |produto| %>
	                <tr>
	                  <th scope="row"><%= produto.id %></th>
                    <td><img src="<%= produto.photoitem %>" style="height: 3.8rem;" /></td>
	                  <td><%= produto.name %></td>
	                  <td><%= produto.description %></td>
                    <td><%= humanized_money_with_symbol produto.price %></td>
	                  <td><%= produto.active_i18n%></td>
	                  <td><%= produto.bestseller_i18n%></td>
	                  <td><%= produto.category.description %></td>
	                  <td><%= produto.label.name %></td>
	                  <!--<td><%= produto.site.name %></td>-->
	                  <td style="width: 130px; text-align: center;">
	                  	<%= link_to edit_backoffice_product_product_path(produto), class: "btn btn-primary" do %>
	                        <i class="icon-new-file"></i>
	                    <% end %>
	                    <%= link_to backoffice_product_product_path(produto), :method => :delete, class: "btn btn-secondary", data: {confirm: "Confirma a exclusão do admin <b>#{produto.name}</b>?"} do %>
	                    	<i class="icon-close"></i>
	                        <% end %>
	                  </td>
	                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container-fluid">
   <div class="row">
    <div class="col-lg-12">
      <div class="block margin-bottom-sm">
       <%= link_to new_backoffice_product_product_path, class: "btn btn-primary" do %>
          <i class="fa fa-plus"></i>
       <% end %>
      </div>
     </div>
   </div>
  </div>