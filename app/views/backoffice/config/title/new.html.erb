<div class="page-header">
  <div class="container-fluid">
    <h2 class="h5 no-margin-bottom">Cadastrar Titulos do site</h2>
  </div>
</div>

<% if @titulo.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>

    <ul>
        <% @titulo.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>

    </div>
<% end %>

<div class="col-lg-12">
	<div class="block">
	  <div class="block-body">
	  	<%= form_for @titulo, url: backoffice_config_title_index_path do |t| %>
	    <div class="form-group">
            <%= t.label "Logo do site", class: "form-control-label" %>
            <%= t.file_field :photologo, class:"form-control" %>
	      </div>
	      <div class="form-group">
            <%= t.label "Nome do site", class: "form-control-label" %>
            <%= t.text_field :title, class:"form-control" %>
	      </div>
	      <div class="form-group">
            <%= t.label "Descrição do botão do whatsapp", class: "form-control-label" %>
            <%= t.text_field :principalbuttondescription, class:"form-control" %>
	      </div>
	      <div class="form-group">
	        <%= t.label "Titulo Principal", class: "form-control-label" %>
            <%= t.text_area :subtitle, class:"form-control" %>
	      </div>
	      <div class="form-group">       
	        <%= t.label "Descrição para Favoritos", class: "form-control-label" %>
            <%= t.text_field :bestsellername, class:"form-control" %>
	      </div>
	      <div class="form-group">
	        <%= t.label "Texto Principal", class: "form-control-label" %>
            <%= t.text_area :text, class:"form-control", rows:"5" %>
	      </div>
	      <%= t.hidden_field :site, :value => current_user.site %>
	      <div class="form-group">       
	        <%= t.submit "Salvar", class: "btn btn-primary" %>
	      </div>
	    <% end %>
	  </div>
	</div>
</div>