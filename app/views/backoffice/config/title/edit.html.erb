<div class="page-header">
  <div class="container-fluid">
    <h2 class="h5 no-margin-bottom">Alterar Titulos do site</h2>
  </div>
</div>
<div class="col-lg-12">
	<div class="block">
	  <div class="block-body">
	    <%= form_for([:backoffice, :config, @titulo]) do |t| %>
	      <div class="form-group">
            <%= t.label :title, class: "form-control-label" %>
            <%= t.text_field :title, class:"form-control" %>
	      </div>
	      <div class="form-group">
	        <%= t.label :subtitle, class: "form-control-label" %>
            <%= t.text_field :subtitle, class:"form-control" %>
	      </div>
	      <div class="form-group">       
	        <%= t.label :bestsellername, class: "form-control-label" %>
            <%= t.text_field :bestsellername, class:"form-control" %>
	      </div>
	      <div class="form-group">
	        <%= t.label :text, class: "form-control-label" %>
            <%= t.text_area :text, class:"form-control" %>
	      </div>
	      <div class="form-group">       
	        <%= t.submit "Salvar", class: "btn btn-primary" %>
	      </div>
	    <% end %>
	  </div>
	</div>
</div>