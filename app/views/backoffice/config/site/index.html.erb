<div class="page-header">
  <div class="container-fluid">
    <h2 class="h5 no-margin-bottom">Configuração dos Sites</h2>
  </div>
</div>
<div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="block margin-bottom-sm">
          <div class="table-responsive"> 
            <table class="table">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Nome</th>
                  <th>Descrição</th>
                  <th>Url</th>
                  <th style="text-align: center;">Ações</th>
                </tr>
              </thead>
              <tbody>
              	<% @sites.each do |site| %>
	                <tr>
	                  <th scope="row"><%= site.id %></th>
	                  <td><%= site.name %></td>
	                  <td><%= site.description %></td>
	                  <td><%= site.url %></td>
	                  <td style="width: 130px; text-align: center;"> 
	                  	<div style="float:left; margin: 1px;">
	                  	<%= link_to backoffice_dashboard_index_path, class: "btn btn-primary" do %>
	                        <i class="icon-new-file"></i>
	                    <% end %>
	                    </div>
	                    <div style="float:left; margin: 1px;">
	                    <%= link_to backoffice_dashboard_index_path, class: "btn btn-secondary" do %>
	                        <i class="icon-close"></i>
	                    <% end %>
	                    </div>
	                  </td>
	                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>