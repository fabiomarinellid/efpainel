<div class="page-header">
  <div class="container-fluid">
    <h2 class="h5 no-margin-bottom">Novo site</h2>
  </div>
</div>

<% if @site.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>

    <ul>
        <% @site.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>

    </div>
<% end %>

<div class="col-lg-12">
	<div class="block">
	  <div class="block-body">
	    <%= form_for @site, url: backoffice_config_site_index_path do |t| %>
	      <div class="form-group">
            <%= t.label "Nome", class: "form-control-label" %>
            <%= t.text_field :name, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= t.label "Descrição", class: "form-control-label" %>
            <%= t.text_area :description, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= t.label "Url", class: "form-control-label" %>
            <%= t.text_field :url, class:"form-control" %>
          </div>
	      <div class="form-group">       
	        <%= t.submit "Salvar", class: "btn btn-primary" %>
	      </div>
	    <% end %>
	  </div>
	</div>
</div>