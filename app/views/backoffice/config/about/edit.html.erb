<div class="page-header">
  <div class="container-fluid">
    <h2 class="h5 no-margin-bottom">Alterar Informações sobre a lanchonete</h2>
  </div>
</div>
<div class="col-lg-12">
	<div class="block">
	  <div class="block-body">
	    <%= form_for([:backoffice, :config, @about]) do |t| %>
	      <div class="form-group">
	        <%= t.label "Digite as Informações sobre a lanchonete", class: "form-control-label" %>
            <%= t.text_area :text, class:"form-control" %>
	      </div>
	      <div class="form-group">       
	        <%= t.submit "Salvar", class: "btn btn-primary" %>
	      </div>
	    <% end %>
	  </div>
	</div>
</div>